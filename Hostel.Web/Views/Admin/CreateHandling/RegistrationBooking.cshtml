@{ Layout = "_AdminLayout"; }
@model BookingViewModel


<div class="form-row">
    <div class="form-group col-md-6">
        <label asp-for="handling.InCheck" class="control-label">Заезд</label>
        <input readonly="readonly" type="date" asp-for="handling.InCheck" class="form-control" />
    </div>
    <div class="form-group col-md-6">
        <label asp-for="handling.OutCheck" class="control-label">Выезд</label>
        <input readonly="readonly"  type="date" asp-for="handling.OutCheck" class="form-control" />
    </div>


</div>
<div class="form-row">
    <div class="form-group col-md-2">
        <label asp-for="room.Number" class="control-label">Номер</label>
        <input readonly="readonly" type="number" asp-for="room.Number" class="form-control" />
    </div>
    <div class="form-group col-md-4">
        <label asp-for="room.Cost" class="control-label">Стоимость</label>
        <input readonly="readonly" type="number" asp-for="room.Cost" class="form-control" />
    </div>

    <div class="form-group col-md-6">
        <label asp-for="room.Type" class="control-label">Тип</label>
        @*<input type="number" asp-for="Type" class="form-control" />*@
    <label readonly="readonly" class="form-control">@Model.room.Type</label>

    </div>
</div>

<div class="form-row">
    <div class="form-group col-md-6">
        <label asp-for="room.Сapacity" class="control-label">Количество мест</label>
        <input readonly="readonly" type="number" asp-for="room.Сapacity" class="form-control" />
    </div>
    <div class="form-group col-md-6">
        <label asp-for="room.Bed" class="control-label">Количество кроватей</label>
        <input readonly="readonly" type="number" asp-for="room.Bed" class="form-control" />
    </div>
</div>
<fieldset class="form-group">
    <div class="form-row">
        <legend class="col-form-label col-sm-2 pt-0">Дополнение:</legend>
        <div class="col-sm-10">
            <div class="form-group">
                <div class="form-check">
                    <input disabled type="checkbox" asp-for="room.Shower" class="form-check-input" />
                    <label  asp-for="room.Shower" class="form-check-label">Душь</label>
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input disabled type="checkbox" asp-for="room.Restroom" class="form-check-input" />
                    <label asp-for="room.Restroom" class="form-check-label">Удобства</label>
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input disabled type="checkbox" asp-for="room.Wifi" class="form-check-input" />
                    <label asp-for="room.Wifi" class="form-check-label">Wifi</label>
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input disabled type="checkbox" asp-for="room.Tv" class="form-check-input" />
                    <label asp-for="room.Tv" class="form-check-label">Телевизор</label>
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input disabled type="checkbox" asp-for="room.Fridge" class="form-check-input" />
                    <label asp-for="room.Fridge" class="form-check-label">Холодильник</label>
                </div>
            </div>
        </div>
    </div>
</fieldset>
<div class="form-group">
    <div class="form-group">
        <label asp-for="room.Description" class="control-label">Описание:</label>
        <textarea readonly="readonly" type="text" asp-for="room.Description" class="form-control" rows="3"></textarea>
    </div>
</div>

<div class="form-row">
    <div class="form-group col-md-2">
        <label asp-for="client.FirstName" class="control-label">Имя</label>
        <input readonly="readonly" type="text" asp-for="client.FirstName" class="form-control" />
    </div>
    <div class="form-group col-md-4">
        <label asp-for="client.LastName" class="control-label">Фамилия</label>
        <input readonly="readonly" type="text" asp-for="client.LastName" class="form-control" />
    </div>

    <div class="form-group col-md-4">
        <label asp-for="client.Surname" class="control-label">Отчество</label>
        <input readonly="readonly" type="text" asp-for="client.Surname" class="form-control" />
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-2">
        <label asp-for="client.Passport" class="control-label">Паспорт</label>
        <input readonly="readonly" type="text" asp-for="client.Passport" class="form-control" />
    </div>
    <div class="form-group col-md-4">
        <label asp-for="client.DatofBirth" class="control-label">Дата Рождения</label>
        <input readonly="readonly" type="date" asp-for="client.DatofBirth" class="form-control" />
    </div>
    <div class="form-group col-md-4">
        <label asp-for="client.Adress" class="control-label">Адрес</label>
        <input readonly="readonly" type="text" asp-for="client.Adress" class="form-control" />
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-2">
        <label asp-for="client.Email" class="control-label">Email</label>
        <input readonly="readonly" type="email" asp-for="client.Email" class="form-control" />
    </div>
    @*<div class="form-group col-md-4">
            <label asp-for="Password" class="control-label">Пароль</label>
            <input type="text" asp-for="Password" class="form-control" />
        </div>*@
    <div class="form-group col-md-4">
        <label asp-for="client.Telephone" class="control-label">Телефон</label>
        <input readonly="readonly" type="tel" asp-for="client.Telephone" class="form-control" />
    </div>
    <div class="form-group col-md-4">
        <label asp-for="client.idRole" class="control-label">Позиция</label>
        @*<input type="number" asp-for="Type" class="form-control" />*@
        <label readonly="readonly" class="form-control">@((RoleType)Model.client.idRole)</label>
        @*<select readonly="readonly" class="custom-select mr-sm-2" asp-for="idRole">
                <option selected>Роль</option>
                <option value="1">user</option>
                <option value="2">moderator</option>
                <option value="3">admin</option>
            </select>*@
    </div>
</div>

<div class="form-group">
    <a asp-action="RegistrationBookingEnd" asp-controller="Admin" class="btn btn-primary" >Подтвердить</a>
</div>
 
