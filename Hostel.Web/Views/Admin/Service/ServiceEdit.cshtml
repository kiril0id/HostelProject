@{ Layout = "_AdminLayout"; }
@model ServiceViewModel


    <form asp-action="EditService" asp-controller="Admin" asp-route-id="@Model.Id">
        <div class="form-row">
            
            <div class="form-group col-md-2">
                <label asp-for="NameService" class="control-label">Сервис</label>
                <input type="text" asp-for="NameService" class="form-control" />
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Cost" class="control-label">Стоимость</label>
                <input type="number" asp-for="Cost" class="form-control" />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Description" class="control-label">Описание</label>
                <textarea asp-for="Description" rows="3" class="form-control"></textarea>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Отправить" class="btn btn-primary" />
        </div>



    </form>