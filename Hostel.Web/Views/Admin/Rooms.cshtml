@{ Layout = "_AdminLayout"; }
@model List<Room>

<table class="table">
    <tr>
       
        <th>
            <a asp-action="Index" asp-route-sortOrder="@ViewBag.NameSort">э
            Номер
            </a>
        </th>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@ViewBag.DepartmentSort">
            Стоимость
            </a>
        </th>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@ViewBag.DepartmentSort">
            Вместимость 
            </a>
        </th>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@ViewBag.WageSort">
            Тип
            </a>
        </th>
    </tr>

    @foreach (Room room in Model)
     {
        <tr>
            <td>@room.Number</td>
            <td>@room.Cost</td>
            <td>@room.Сapacity</td>
            <td>@room.Type
            <td>
                <a class="btn btn-warning btn-sm rounded-0" asp-action="Edit" asp-controller="Home" asp-route-id="@room.Id">Подробнее</a>
                <a class="btn btn-success btn-sm rounded-0" asp-action="Edit" asp-controller="Home" asp-route-id="@room.Id">Изменить</a>
                <a class="btn btn-danger btn-sm rounded-0" asp-action="Delete" asp-controller="Home" asp-route-id="@room.Id">Удалить</a>
            </td>
        </tr>
     }
</table>