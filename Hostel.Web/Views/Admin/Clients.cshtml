@{ Layout = "_AdminLayout"; }
@model List<Client>


    <table class="table">
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.NameSort">
                    Имя
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.DepartmentSort">
                    Фамилия
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.DepartmentSort">
                    Отчество
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.WageSort">
                    Паспорт
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.WageSort">
                    Дата рождения
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.WageSort">
                    Адрес
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.WageSort">
                    Телефон
                </a>
            </th>
            <th></th>
            <th></th>
        
        </tr>

        @foreach (Client  client in Model)
         {
            <tr>
                <td>@client.FirstName</td>
                <td>@client.LastName</td>
                <td>@client.Surname</td>
                <td>@client.Passport</td>
                <td>@client.DatofBirth</td>
                <td>@client.Adress</td>
                <td>@client.Telephone</td>
                <td>
                    <a class="btn btn-dark btn-sm rounded-0" asp-action="Edit" asp-controller="Home" asp-route-id="@client.Id">Web</a>
                    <a class="btn btn-success btn-sm rounded-0" asp-action="Edit" asp-controller="Home" asp-route-id="@client.Id">Изменить</a>
                    <a class="btn btn-danger btn-sm rounded-0" asp-action="Delete" asp-controller="Home" asp-route-id="@client.Id">Удалить</a>
                </td>


         
            </tr>
         }
    </table>