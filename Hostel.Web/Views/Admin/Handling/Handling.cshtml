@{ Layout = "_AdminLayout"; }
@model HandlingViewModel

<div class="form-row">
    <div class="form-group col-md-6">
        <label asp-for="LastName" class="control-label">Фамилия</label>
        <input readonly="readonly" type="text" asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group col-md-2">
        <label asp-for="Room" class="control-label">Комната</label>
        <input readonly="readonly" type="number" asp-for="Room" class="form-control" />
    </div>
</div>

<div class="form-row">
    <div class="form-group col-md-4">
        <label asp-for="InCheck" class="control-label">Дата заселения</label>
        <input readonly="readonly" type="date" asp-for="InCheck" class="form-control" />
    </div>

    <div class="form-group col-md-4">
        <label asp-for="OutCheck" class="control-label">Дата выселения</label>
        <input readonly="readonly" type="date" asp-for="OutCheck" class="form-control" />
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-2">
        <label asp-for="IdService" class="control-label">Сервис1</label>
        <input readonly="readonly" type="number" asp-for="IdService" class="form-control" />
    </div>
    <div class="form-group col-md-4">
        <label asp-for="IdService2" class="control-label">Сервис2</label>
        <input readonly="readonly" type="number" asp-for="IdService2" class="form-control" />
    </div>
    <div class="form-group col-md-4">
        <label asp-for="IdService3" class="control-label">Сервис3</label>
        <input readonly="readonly" type="number" asp-for="IdService3" class="form-control" />
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-2">
        <label asp-for="IdBooking" class="control-label">Бронирование</label>
        <input readonly="readonly" type="number" asp-for="IdBooking" class="form-control" />
    </div>
    <div class="form-group col-md-4">
        <label asp-for="IdEmployee" class="control-label">Сотрудник</label>
        <input readonly="readonly" type="number" asp-for="IdEmployee" class="form-control" />
    </div>
</div>


<a class="btn btn-success" asp-action="EditHandling" asp-controller="Admin" asp-route-id="@Model.Id ">Изменить</a>


