@{ Layout = "_AdminLayout"; }
@model HandlingViewModel

<form asp-action="CreateHandling" asp-controller="Admin">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="IdClient" class="control-label">Фамилия</label>
            <input type="number" asp-for="IdClient" class="form-control" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="LastName" class="control-label">Фамилия</label>
            <input type="text" asp-for="LastName" class="form-control" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
            <label asp-for="IdRoom" class="control-label">Комната</label>
            <input type="number" asp-for="IdRoom" class="form-control" />
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Room" class="control-label">Комната</label>
            <input type="number" asp-for="Room" class="form-control" />
        </div>

    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="InCheck" class="control-label">Дата заселения</label>
            <input type="date" asp-for="InCheck" class="form-control" />
        </div>

        <div class="form-group col-md-4">
            <label asp-for="OutCheck" class="control-label">Дата выселения</label>
            <input type="date" asp-for="OutCheck" class="form-control" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
            <label asp-for="IdService" class="control-label">Сервис1</label>
            <input  type="number" asp-for="IdService" class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <label asp-for="IdService2" class="control-label">Сервис2</label>
            <input type="number" asp-for="IdService2" class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <label asp-for="IdService3" class="control-label">Сервис3</label>
            <input type="number" asp-for="IdService3" class="form-control" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
            <label asp-for="IdBooking" class="control-label">Бронирование</label>
            <input type="number" asp-for="IdBooking" class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <label asp-for="IdEmployee" class="control-label">Сотрудник</label>
            <input type="number" asp-for="IdEmployee" class="form-control" />
        </div>
    </div>


    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-primary" />
    </div>
</form>
