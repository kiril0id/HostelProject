<div class="row marg50">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"><h2 class="h2">Регистрация клиента</h2></div>
    <div class="col-lg-2 col-md-2 col-sm-1 col-xs-1"></div>
    <div class="col-lg-8 col-md-8 col-sm-11 col-xs-11">
        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true" class="form-horizontal form-wizzard">

            <div class="validation" asp-validation-summary="ModelOnly"></div>

            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <div id="name-group" class="form-group">
                        <label asp-for="Email">Введите Email</label><br />
                        <input type="email" class="form-control" placeholder="Enter your email ..." asp-for="Email" />
                        <span asp-validation-for="Email" />

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <div id="surname-group" class="form-group">
                        <label asp-for="Password">Введите пароль</label><br />
                        <input class="form-control" asp-for="Password" />
                        <span asp-validation-for="Password" />

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <div id="phone-group" class="form-group">
                        <label asp-for="ConfirmPassword">Повторите пароль</label><br />
                        <input class="form-control" asp-for="ConfirmPassword" />
                        <span asp-validation-for="ConfirmPassword" />

                    </div>
                </div>
            </div>

            <div class="form-group ">
                <input type="submit" value="Регистрация" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div class="col-lg-2 col-md-2 col-sm-1 col-xs-1"></div>
</div>