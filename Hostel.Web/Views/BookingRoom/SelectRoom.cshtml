                                            <input type="submit" value="Поиск" class="btn btn-default wizzard-search-btn" />
                                        </div>
                                    </div>

                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container reservation-1">
            <div class="row">
                <div class="col-md-12">
                    <div class="wizzard-list">
                        <h3 class="h3">Свободные номера на указанную дату</h3>
                        <ul class="row best-room_ul">
                            @foreach (var room in Model.room)
                            {

                                <li class="col-md-4 col-sm-6 col-xs-12 best-room_li">
                                    <div class="best-room_img">
                                        <a href="#"><img src="~/images/best-rooms/1.jpg" alt="" /></a>
                                        <div class="best-room_overlay">
                                            <div class="overlay_btn"><a class="btn btn-default" asp-action="RoomSelect" asp-controller="BookingRoom" asp-route-id="@room.Id">Select</a></div>
                                        </div>
                                    </div>
                                    <div class="best-room-info">
                                        <div class="best-room_t">
                                            <a asp-controller="Room" asp-action="RoomDetails" asp-route-id="@room.Id">@room.Type</a>
                                        </div>
                                        <div class="best-room_desc">@room.Description</div>
                                        <div class="best-room_price">
                                            <span>@room.Cost BYN / Сутки</span>
                                        </div>
                                        <div class="wizzard_footer">
                                            <div class="footer_el __bed"><i class="fa fa-bed"></i> @room.Сapacity</div>
                                            <div class="footer_el __ppl"><i class="fa fa-user"></i> @(room.Сapacity+2)</div>
                                            <div class="footer_el __wifi">@room.Type</div>
                                            <div class="footer_el __area">@room.Number</div>
                                            <div class="clearfix"></div>
                                        </div>
                                    </div>
                                </li>

                            }
                        </ul>
