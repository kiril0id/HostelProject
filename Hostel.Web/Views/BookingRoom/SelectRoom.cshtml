
@model ReservationViewModel


    <div class="wizzard reservation-1">
        <div class="container-fluid reservation_last_step_container">
            <div class="container">
                <div class="row reservation-top">
                    <div class="module __reservation">
                        <div class="module-block">
                            <form asp-action="DashboardRoom" asp-controller="BookingRoom"  class="form-planner form-horizontal">
                                <div class="row">
                                    <div class="col-md-3 col-xs-12">
                                        <div class="form-group">
                                            <label>Заезд</label>
                                            <input class="form-control __plannerInput" asp-for="@Model.searchRoom.InCheck" type="date"  />
                                        </div>
                                    </div>

                                    <div class="col-md-3 col-xs-12">
                                        <div class="form-group">
                                            <label>Выезд</label>
                                            <input class="form-control __plannerInput" asp-for="@Model.searchRoom.OutCheck" type="date"  />
                                        </div>
                                    </div>



                                    <div class="col-md-3 col-xs-6">
                                        <div class="form-group">
                                            <label>Тип комнаты</label>
                                            <div class="theme-select">
                                                <select class="form-control __plannerSelect" name="type">
                                                    <option value="@Model.searchRoom.Type">@Model.searchRoom.Type</option>
                                                    @foreach (var item in (List<string>)ViewBag.types)
                                                    {
                                                        <option value="@item">@item</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div>

