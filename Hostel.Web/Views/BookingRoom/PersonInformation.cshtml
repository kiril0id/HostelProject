                                <input class="form-control" asp-for="@Model.client.FirstName" type="text" placeholder="Введите  имя ..." />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Фамилия</label>
                                <input class="form-control" asp-for="@Model.client.LastName" type="text" placeholder="Введите Фамилию ..." />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Email</label>
                                <input class="form-control" asp-for="@Model.client.Email" type="email" placeholder="Введите E-mail ..." />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Номерр телефона</label>
                                <input class="form-control" asp-for="@Model.client.Telephone" type="text" placeholder="Введите номер телефона ..." />
                            </div>
                        </div>
                    </div>
