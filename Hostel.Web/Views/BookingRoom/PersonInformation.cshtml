@model ReservationViewModel 

<div class="wizzard">
    <div class="container-fluid reservation_last_step_container">
        <div class="container">
            <div class="row reservation-top">
                <div class="module __reservation">
                    <div class="module-block">
                        <form asp-action="DashboardRoom" asp-controller="BookingRoom" class="form-planner form-horizontal">
                            <div class="row">
                                <div class="col-md-3 col-xs-12">
                                    <div class="form-group">
                                        <label>Заезд</label>
                                        <input class="form-control __plannerInput" readonly="readonly" asp-for="@Model.searchRoom.InCheck" type="date" placeholder="10-05-2021" />
                                    </div>
                                </div>

                                <div class="col-md-3 col-xs-12">
                                    <div class="form-group">
                                        <label>Выезд</label>
                                        <input class="form-control __plannerInput" readonly="readonly" asp-for="@Model.searchRoom.OutCheck" type="date" placeholder="17-05-2021" />
                                    </div>
                                </div>



                                <div class="col-md-3 col-xs-6">
                                    <div class="form-group">
                                        <label>Тип комнаты</label>
                                        <input  class="form-control " readonly="readonly" asp-for="@Model.searchRoom.Type" type="text"/>
                                       
                                    </div>
                                </div>

                                <div class="col-md-2 col-xs-12">
                                    <div class="form-group ">
                                        <input type="submit" value="Редактировать" class="btn btn-default wizzard-search-btn" />
                                    </div>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="ClientInformation" asp-controller="BookingRoom" class="form-wizzard form-horizontal">
